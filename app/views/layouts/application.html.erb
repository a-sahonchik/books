<!DOCTYPE html>
<html>
  <head>
    <title>Books Online Store</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
        'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application',
        'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag("/assets/test-book.png") %>
      <span class="title">Online Books Store</span>
    </div>
    <div id="columns">
      <div id="side">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %>
            <% end %>
          <% end %>

        <ul>
          <li><a href="/">Главная</a></li>
          <li><a href="http://www..../faq">FAQ</a></li>
          <li><a href="http://www..../news">Новости</a></li>
          <li><a href="http://www..../contact">Контакты</a></li>
        </ul>
        <div class="time_date">
          <p><%= Time.now.strftime("%H:%M") %></p>
          <p><%= Time.now.strftime("%d.%m.%Y") %></p>
        </div>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
