<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Как к вам обращаться?' %>
    <%= form.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= form.label 'Адрес' %>
    <%= form.text_area :address, rows: 3, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label 'Ваш email' %>
    <%= form.email_field :email, size: 40 %>
  </div>

  <div class="field">
    <%= form.label 'Оплата' %>
    <%= form.select :pay_type, Order.pay_types.keys,
        prompt: 'Выберите способ оплаты' %>
  </div>

  <div class="actions">
    <%= form.submit 'Оформить заказ' %>
  </div>
<% end %>
